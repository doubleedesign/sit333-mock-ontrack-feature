{
	"compilerOptions": {
		"baseUrl": "./",
		"module": "esnext",
		"target": "esnext",
		"moduleResolution": "node",
		"lib": [
			"ESNext",
			"DOM",
			"DOM.Iterable"
		],
		"allowJs": false,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"allowImportingTsExtensions": true,
		"jsx": "react-jsx",
	},
	"include": ["src", "node_modules/jest-fetch-mock/types/index.d.ts", "vite.config.ts"]
}
